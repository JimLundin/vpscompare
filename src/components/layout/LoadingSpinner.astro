---
interface Props {
	size?: 'sm' | 'md' | 'lg';
	class?: string;
}

const { size = 'md', class: className = '' } = Astro.props;

const sizes = {
	sm: 'w-4 h-4',
	md: 'w-8 h-8',
	lg: 'w-12 h-12'
};
---

<div class={`flex items-center justify-center ${className}`}>
	<div class={`animate-spin rounded-full border-2 border-gray-300 border-t-blue-600 ${sizes[size]}`}></div>
</div>